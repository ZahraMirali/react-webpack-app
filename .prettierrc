{
    "useTabs": false,
    "tabWidth": 2,
    "singleQuote": true,
    "printWidth": 120,
    "trailingComma": "all",
    "semi": true,
    "arrowParens": "always",
    "endOfLine": "lf",
    "overrides": [
        {
            "files": ["*.ts"],
            "options": {
                "parser": "typescript"
            }
        },
        {
            "files": ["*.tsx"],
            "options": {
                "parser": "typescript",
                "jsxBracketSameLine": false,
                "jsxSingleQuote": false
            }
        },
        {
            "files": ["*.scss"],
            "options": {
                "parser": "scss"
            }
        },
        {
            "files": ["*.json"],
            "options": {
                "parser": "json"
            }
        }
    ]
}
